# Shell scripts (Unix LF)
/gradlew text eol=lf
*.sh text eol=lf

# Windows batch files (Windows CRLF)
*.bat text eol=crlf

# Binary files
*.jar binary

# Text files (normalize to LF in repository)
* text=auto
*.java text eol=lf
*.xml text eol=lf
*.properties text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.gradle text eol=lf

